{
  "manifest_version": 3,
  "name": "Multi-Platform Watch Progress Tracker",
  "description": "Track live watch progress across streaming platforms, save cover images, resume playback and sync across devices.",
  "version": "0.1.0",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "identity"
  ],
  "host_permissions": [
    "*://*.netflix.com/*",
    "*://*.hulu.com/*",
    "*://*.disneyplus.com/*",
    "*://*.anicr.us/*",
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Watch Progress"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content_scripts/genericVideo.js",
        "content_scripts/aniCrush.js"
      ],
      "run_at": "document_idle"
    }
  ]
  
}
