{
  "manifest_version": 3,
  "name": "Multi-Platform Watch Progress Tracker",
  "description": "Track live watch progress across streaming platforms, save cover images, resume playback and sync across devices.",
  "version": "0.1.0",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "identity"
  ],
  "host_permissions": [
    "*://*.netflix.com/*",
    "*://*.hulu.com/*",
    "*://*.disneyplus.com/*",
    "*://*.anicr.us/*",
    "*://*.anicrush.*/*",
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Watch Progress"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.netflix.com/*",
        "*://*.hulu.com/*",
        "*://*.disneyplus.com/*",
        "*://*.anicr.us/*",
        "*://*.anicrush.*/*"
      ],
      "js": ["content_scripts/genericVideo.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.anicrush.*/*"],
      "js": ["content_scripts/aniCrush.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
